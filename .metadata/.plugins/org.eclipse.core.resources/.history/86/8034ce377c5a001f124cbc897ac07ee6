package waits;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;

import com.utils.neotech.BaseClass;

public class AmericanAirlinesFlightSearch extends BaseClass{

	public static void main(String[] args) {
		/*
		 * Homework: American Airlines Flight Search
		 * 
		 * Open chrome browser Go to https://www.aa.com/homePage.do Enter From and To
		 * Select departure as December 14 of 2024 Select arrival as December 22 of 2024
		 * Click on search Close browser
		 */
		setUp();
		WebElement from=driver.findElement(By.id("reservationFlightSearchForm.originAirport"));
		from.click();
	    from.clear();
	    from.sendKeys("CHI");
		
		WebElement to=driver.findElement(By.id("reservationFlightSearchForm.destinationAirport"));
		to.click();
		to.clear();
		to.sendKeys("IST");
		driver.findElement(By.xpath("//*[@id=\"reservationFlightSearchForm\"]/div[4]/div[1]/div/button")).click();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(3));
		String month=driver.findElement(By.xpath("//*[@id=\"ui-datepicker-div\"]/div[1]/div/div/span[1]")).getText();
		while(!month.equals("December")) {
			driver.findElement(By.xpath("//*[@id=\"ui-datepicker-div\"]/div[2]/div/a")).click();
			if(month.equals("December")) {
			break;
			}
		}
		
		
		
		
		

	}

}
